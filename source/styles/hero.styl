@import "mixins/media-query-variables"

section[data-section="hero"]
  display flex
  justify-content center
  align-items center
  flex-flow column
  font-family var(--sans-serif-fonts)
  font-weight 300
  color white
  -webkit-font-smoothing antialiased
  min-height calc(100vh - 5rem)
  padding var(--section-vertical-padding) 1em
  text-align left
  // background #000
  z-index 1
  translate transform3d(0, 0, 0)

  @media desktopMinWidthQuery
    padding var(--section-vertical-padding) 5em

  .hero-copy > svg
    height 10rem
    fill white
    max-width 100%

  .hero-link
    color white
    text-align center

  h3
    text-transform uppercase
    font-size 2rem
    letter-spacing 0.1rem

  h2
    text-align center
    font-size 1.25em

  @media mobileMaxWidthQuery
    h3
      margin-top 2em

  @media desktopMinWidthQuery
    h2
      font-weight 300

  .actions
    display flex

    @media mobileMaxWidthQuery
      display block
      width 100%
      max-width 100%
      margin-top 1em

      .button:not(:last-child)
        margin-bottom 1em

    @media desktopMinWidthQuery
      .button:not(:last-child)
        margin-right 2em

    .button
      font-size 2rem

  .hero-background
    position absolute
    left 0
    top 0
    right 0
    bottom 0
    z-index -1

  .app-store-badges
    display flex
    flex-direction row
    flex-wrap wrap
    margin-bottom 1em
    max-width 100%
    justify-content center

    a
      display inline-block
      margin 4px

    svg
      height 64px
      padding 5px
      max-width 100%

.slideshow
  height 100%
  width 100%
  position relative

  .background-slide
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    transition opacity 1s ease
    opacity 0
    background-size cover
    background-position center center

    &::after
      content ""
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      opacity .5

    &[data-slide="1"]
      background-image url('~media/peace-min/peace-boy.jpg')

    &[data-slide="2"]
      background-image url('~media/peace-min/peace-women.jpg')

    &[data-slide="3"]
      background-image url('~media/peace-min/peace-woman.jpg')

    &[data-slide="4"]
      background-image url('~media/peace-min/peace-bed.jpg')

  & > .background-slide:nth-child(1)::after
    background var(--brand-accent-orange)
    filter brightness(10%)

  & > .background-slide:nth-child(2)::after
    background var(--brand-accent-red)
    filter brightness(20%)

  & > .background-slide:nth-child(3)::after
    background var(--brand-accent-blue)
    filter brightness(20%)

  & > .background-slide:nth-child(4)::after
    background var(--brand-accent-purple1)
    filter brightness(30%)

  &[data-active-slide="1"] > .background-slide:nth-child(1),
  &[data-active-slide="2"] > .background-slide:nth-child(2),
  &[data-active-slide="3"] > .background-slide:nth-child(3),
  &[data-active-slide="4"] > .background-slide:nth-child(4),
  &.static-slide > .background-slide
    opacity 1

  &[data-active-slide="1"] > .background-slide:not(:nth-child(5)):not(:nth-child(1)):not(:nth-child(2)),
  &[data-active-slide="2"] > .background-slide:not(:nth-child(1)):not(:nth-child(2)):not(:nth-child(3)),
  &[data-active-slide="3"] > .background-slide:not(:nth-child(2)):not(:nth-child(3)):not(:nth-child(4)),
  &[data-active-slide="4"] > .background-slide:not(:nth-child(3)):not(:nth-child(4)):not(:nth-child(5))
    background-image none !important
